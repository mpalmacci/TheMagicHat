<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="com.palmak.themagichat.decks.DeckListFragment"
        android:id="@+id/deck_list_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_deck_list" />

    <fragment
        android:name="com.palmak.themagichat.decks.DeckViewFragment"
        android:id="@+id/deck_view_fragment"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        tools:layout="@layout/layout_empty_deck_view"/>

</LinearLayout>